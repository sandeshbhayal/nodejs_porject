<div class="d-sm-flex align-items-center justify-content-between mb-4">
<h1 class="h3 mb-0 text-gray-800">Product List </h1>
<a href="/Products/Product-Add" class="d-none d-sm-inline-block btn btn-primary">
<i class="fas fa-folder-plus text-white-50"></i> Product Add</a>    
</div>


<select id="selectName" name="selectName">
{{#each product_res}}
    <option value="{{this.id}}" selectObject.selectedIndex = 2> {{this.product_name}} </option>
{{/each}}
<script>
    const EL_country = document.querySelector('#selectName');
    EL_country.value = '2';
    EL_country.options[EL_country.selectedIndex].defaultSelected = true; 
</script>
</select> 

<table class="table table-bordered dataTable">
    <thead>
    <tr> 
        <th>Sno</th>
        <th>Product Name</th>
        <th>Product Company</th>
        <th>Manufacture Country </th>
        <th>Manufacture City </th>
        <th>Manufacture Month-year </th>
        <th>Product Price</th>
        <th>Edit</th>
    </tr>
    </thead>
    <tbody>
    {{#each product_res}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.product_name}}</td>
        <td>{{this.product_company}}</td>
        <td>{{this.manufacture_country}}</td>
        <td>{{this.manufacture_city}}</td>
        <td>{{this.manufacture_month}}-{{this.manufacture_year}}</td>
        <td>{{this.product_rate}}</td> 
        <td><a href="/Products/get_product/{{this.id}}"><i class="fas fa-fw fa-tachometer-alt"></i></a></td>
    </tr>
    {{/each}}
    </tbody>
</table>
